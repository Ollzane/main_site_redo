<div id="post-container">
  <div class="post-wrapper">
    <div class="post-title-container">
      <div class="post-title">
        <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
        <%= @post.title %><br>
      </div>
      <div class="edit">
        <% if user_signed_in? %>
          <%= link_to "Edit Article", edit_post_path(@post) %>
        <% end %>
      </div>
      <div class="delete">
        <% if user_signed_in? %>
          <%= link_to "Delete Article", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
        <% end %>
      </div>
    </div>
    <br>
    <br>

    <div class="post-content">
      <%= markdown @post.content %>
    </div>

    <div class="share-post">
      <h2>How about sharing '<%= @post.title %>' ?</h2>
      <!-- Twitter -->
      <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @olliedevdesign - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');voide(0)">
        <i class="fa fa-twitter"></i>
      </a>
      <!-- Facebook -->
      <a onclick="javascript:window.open('http://facebook.com/sharer.php?u<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');voide(0)">
        <i class="fa fa-facebook"></i>
      </a>
      <!-- Google Plus -->
      <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');voide(0)">
        <i class="fa fa-google-plus"></i>
      </a>
    </div>
  </div>
</div>
